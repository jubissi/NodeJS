<html>
<head>
  <title>Lista de Produtos</title>
  <meta charset="utf-8">
</head>
  <body>
    <h2>Produtos</h2>

        <table>
            <tr>
              <td>ID</td>
              <td>Nome</td>
              <td>Descrição</td>
            </tr>

            <% for(var i = 0; i < produtos.length; i++) { %>

            <tr>
              <td><%= produtos[i].id_produto %></td>
              <td><%= produtos[i].nome %></td>
              <td><%= produtos[i].descricao %></td>
            </tr>

            <% } %>

        </table>


  </body>
</html>
